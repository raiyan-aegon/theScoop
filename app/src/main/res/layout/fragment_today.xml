<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.today.TodayFragment">

    <data>

        <import type="com.mukhtarinc.thescoop.utils.TheScoopDateUtils"/>

        <variable
            name="article"
            type="com.mukhtarinc.thescoop.model.Article" />

    </data>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/shimmerLayout"
                android:layout_height="wrap_content">

                <include layout="@layout/shimmer_placeholder_first_item"/>
                <include layout="@layout/shimmer_placeholder"/>
                <include layout="@layout/shimmer_placeholder"/>
                <include layout="@layout/shimmer_placeholder"/>
                <include layout="@layout/shimmer_placeholder"/>
                <include layout="@layout/shimmer_placeholder"/>

            </LinearLayout>



        <com.baoyz.widget.PullRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               app:layout_behavior="@string/appbar_scrolling_view_behavior"
               android:id="@+id/todayList"
               android:overScrollMode="never"
               android:visibility="gone"
               android:layout_height="wrap_content"/>

        </com.baoyz.widget.PullRefreshLayout>


        <include layout="@layout/no_connection"
            android:id="@+id/noConnection"
            android:visibility="invisible"/>

    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
